<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_marginLR"
        android:layout_marginRight="@dimen/main_marginLR"
        android:layout_marginTop="@dimen/main_marginLR"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/back_buttons_light_gray"
            android:orientation="horizontal">

            <com.bank24.hi.hekmatbank.ui.rippleView.RippleView
                android:id="@+id/btn_fine_payment"
                rv_centered="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                ripple:rv_centered="true"
                ripple:rv_color="@color/white"
                ripple:rv_rippleDuration="100"
                ripple:rv_type="rectangle"
                ripple:rv_zoom="true">

                <com.bank24.hi.hekmatbank.ui.DPTextView
                    android:id="@+id/btn_fine_pay_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/back_mci_left_unselect"
                    android:gravity="center"
                    android:paddingBottom="@dimen/charge_sim_padding_txt"
                    android:paddingTop="@dimen/charge_sim_padding_txt"
                    android:text="پرداخت جریمه"
                    android:textColor="@color/txt_light_gray"
                    android:textSize="@dimen/small_size" />
            </com.bank24.hi.hekmatbank.ui.rippleView.RippleView>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/txt_light_gray" />

            <com.bank24.hi.hekmatbank.ui.rippleView.RippleView
                android:id="@+id/btn_fine_negative_point"
                rv_centered="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                ripple:rv_centered="true"
                ripple:rv_color="@color/white"
                ripple:rv_rippleDuration="100"
                ripple:rv_type="rectangle"
                ripple:rv_zoom="true">

                <com.bank24.hi.hekmatbank.ui.DPTextView
                    android:id="@+id/btn_fine_negative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/back_mci_left_unselect"
                    android:gravity="center"
                    android:paddingBottom="@dimen/charge_sim_padding_txt"
                    android:paddingTop="@dimen/charge_sim_padding_txt"
                    android:text="امتیاز منفی"
                    android:textColor="@color/txt_light_gray"
                    android:textSize="@dimen/normal_size" />

            </com.bank24.hi.hekmatbank.ui.rippleView.RippleView>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/txt_light_gray" />

            <com.bank24.hi.hekmatbank.ui.rippleView.RippleView
                android:id="@+id/btn_fine_inquiry"
                rv_centered="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/back_mci_right_select"
                android:gravity="center"
                ripple:rv_centered="true"
                ripple:rv_color="@color/white"
                ripple:rv_rippleDuration="100"
                ripple:rv_type="rectangle"
                ripple:rv_zoom="true">

                <com.bank24.hi.hekmatbank.ui.DPTextView
                    android:id="@+id/btn_fine_inquiry_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingBottom="@dimen/charge_sim_padding_txt"
                    android:paddingTop="@dimen/charge_sim_padding_txt"
                    android:text="جستجو"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_size" />
            </com.bank24.hi.hekmatbank.ui.rippleView.RippleView>
        </LinearLayout>


        <!--<include layout="@layout/activity_internet_charge_adsl" />-->
        <!--<include layout="@layout/activity_internet_charge_mobile" />-->
        <!--<include layout="@layout/activity_internet_charge_wimax" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fine_shared_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/split_marginBottom_star"
        android:layout_marginTop="@dimen/charge_sim_maginTop"
        android:orientation="vertical" />


</LinearLayout>