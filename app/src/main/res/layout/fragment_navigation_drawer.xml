<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#e8e8e8"
    tools:context="com.irprogram.tirbargh.navigation_drawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:background="@color/main_color"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:src="@drawable/hekmat_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:orientation="vertical"
            android:weightSum="6">


            <RelativeLayout
                android:id="@+id/cardtocard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#9d9d9d"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/mojodinav" />

                <com.bank24.hi.hekmatbank.ui.DPTextView
                    android:id="@+id/check_supply_seporde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="  موجودی حساب "
                    android:textColor="#f58220"
                    android:textSize="15dp"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_below="@+id/txt_manage"-->
                <!--android:layout_marginTop="1dp"-->
                <!--android:background="@color/contact_list" />-->

            <RelativeLayout
                android:id="@+id/cardtoseporde"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="#003366"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/moneytransfernav" />

                <com.bank24.hi.hekmatbank.ui.DPTextView
                    android:id="@+id/cardtoseporde_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text=" انتقال وجه "
                    android:textColor="#f58220"
                    android:layout_marginRight="30dp"
                    android:layout_alignBottom="@+id/imageView11"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_below="@+id/txt_manage"-->
                <!--android:layout_marginTop="1dp"-->
                <!--android:background="@color/contact_list" />-->

            <RelativeLayout
                android:id="@+id/normaltransfer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="#9d9d9d"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/modiriyatcartnav"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <com.bank24.hi.hekmatbank.ui.DPTextView
                    android:id="@+id/normaltransfer_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text=" مدیریت کارت"
                    android:textColor="#f58220"
                    android:textSize="15dp"
                    android:layout_alignBottom="@+id/imageView12"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_below="@+id/txt_manage"-->
                <!--android:layout_marginTop="1dp"-->
                <!--android:background="@color/contact_list" />-->

            <RelativeLayout
                android:id="@+id/payatransfer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="#003366"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/ghabznav"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <com.bank24.hi.hekmatbank.ui.DPTextView
                    android:id="@+id/check_supply_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="  پرداخت قبوض"
                    android:textColor="#f58220"
                    android:textSize="15dp"
                    android:layout_alignBottom="@+id/imageView13"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_below="@+id/txt_manage"-->
                <!--android:layout_marginTop="1dp"-->
                <!--android:background="@color/contact_list" />-->

            <RelativeLayout
                android:id="@+id/continoustransfer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="#9d9d9d"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/checknav"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <com.bank24.hi.hekmatbank.ui.DPTextView
                    android:id="@+id/check_supply_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:text="پیگیری چک"
                    android:textColor="#f58220"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_below="@+id/txt_manage"-->
                <!--android:layout_marginTop="1dp"-->
                <!--android:background="@color/contact_list" />-->

            <RelativeLayout
                android:id="@+id/continoustransfer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="#003366"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/tashilatnav"
                    android:layout_alignBottom="@+id/continoustransfer_txt"
                    android:layout_alignTop="@+id/continoustransfer_txt"
                    android:layout_alignParentEnd="true" />

                <com.bank24.hi.hekmatbank.ui.DPTextView
                    android:id="@+id/continoustransfer_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:text="   تسهیلات"
                    android:textColor="#f58220"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>