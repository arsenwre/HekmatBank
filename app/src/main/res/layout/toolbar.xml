<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/toolbar_back">

        <com.bank24.hi.hekmatbank.ui.DPTextView
            android:id="@+id/toolbar_txt_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/toolbar_marginTop"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/toolbar_marginLR"
            android:paddingTop="@dimen/toolbar_paddingTop_info"
            android:text="@string/confirmation"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_txt_size"
            android:visibility="gone" />

        <com.bank24.hi.hekmatbank.ui.DPTextView
            android:id="@+id/toolbar_txt_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/toolbar_txt_color"
            android:textSize="@dimen/toolbar_txt_tittle_size" />

        <ImageView
            android:id="@+id/toolbar_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/toolbar_marginTop"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/toolbar_marginLR"
            android:paddingRight="@dimen/toolbar_marginLR"
            android:paddingTop="5dp"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/toolbar_img_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/toolbar_marginTop"
            android:layout_toRightOf="@+id/toolbar_img_back"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/toolbar_marginLR"
            android:paddingRight="15dp"
            android:paddingTop="@dimen/toolbar_paddingTop_info"
            android:src="@drawable/info"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/toolbar_img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/toolbar_marginTop"
            android:layout_alignParentRight="true"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/toolbar_marginLR"
            android:paddingRight="15dp"
            android:paddingTop="@dimen/toolbar_paddingTop_info"
            android:src="@drawable/menu_bars" />

    </RelativeLayout>
</RelativeLayout>


