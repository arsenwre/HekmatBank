    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerInParent="true"-->
    <!--rv_centered="true"-->
    <!--ripple:rv_zoom="true"-->
    <!--ripple:rv_centered="true"-->
    <!--ripple:rv_type="rectangle"-->
    <!--ripple:rv_color ="@color/main_color"-->
    <!--ripple:rv_rippleDuration="100"-->
    <!--android:gravity="bottom"-->
    <!--android:layout_alignParentBottom="true">-->

    <ImageView
        android:id="@+id/split_img_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/split_marginBottom_star"
        android:src="@drawable/split_star" />
    <!--</com.andexert.library.RippleView>-->
</RelativeLayout>    <!-- rel SplitActionbar holder -->